<UserControl x:Class="QuickChatter.Client.Views.Controls.ucConnect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuickChatter.Client.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#2b2c2e">
        <Label Content="Enter your preferred username:" HorizontalAlignment="Left" Margin="342,145,0,0" VerticalAlignment="Top" Foreground="#d8dde6" Height="62" Width="222"/>
        <TextBox HorizontalAlignment="Left" Margin="342,212,0,0" TextWrapping="Wrap" Text="{Binding Username}" VerticalAlignment="Top" Width="120"/>
        <Button Content="Connect" Command="{Binding ConnectCommand}" HorizontalAlignment="Left" Margin="342,306,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
